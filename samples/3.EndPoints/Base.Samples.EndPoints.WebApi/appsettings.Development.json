{
  "ApplicationName": "Base",
  "ServiceId": "Base",
  "ServiceName": "Base",
  "ServiceVersion": "1.0.0",

  "ConnectionStrings": {
    "BaseConnectionString": "Server=.;Database=MiniBlogDb;User Id=sa;Password=M@$$0ud1001;MultipleActiveResultSets=true;Encrypt=false"
  },

  "WebUserInfo": {
    "DefaultUserId": 1
  },

  "AutoMapper": {
    "AssmblyNamesForLoadProfiles": "Base"
  },

  "MesmasoudgeInbox": {
    "ApplicationName": "Base"
  },

  "OAuth": {
    "Authority": "https://localhost:5000",
    "Audience": "Base",
    "RequireHttpsMetadata": true,
    "Scopes": {
      "MiniBlogScope": "MiniBlogScope"
    },
    "ValidateAudience": false,
    "ValidateIssuer": false,
    "ValidateIssuerSigningKey": false
  },

  "Swagger": {
    "Enabled": true,
    "SwaggerDoc": {
      "Version": "v1",
      "Title": "Base",
      "Name": "v1",
      "URL": "/swagger/v1/swagger.json"
    },
    "OAuth": {
      "Enabled": false,
      "AuthorizationUrl": "",
      "TokenUrl": "",
      "Scopes": {
        "MiniBlogScope": "BaseScope"
      }
    }
  },

  "SoftwarePart": {
    "ApplicationName": "Base.Samples",
    "ModuleName": "Base.Samples",
    "ServiceName": "Base.Samples",
    "DestinationServiceBaseAddress": "https://localhost:6000/",
    "DestinationServicePath": "api/SoftwarePart/Create",
    "OAuth": {
      "Enabled": true,
      "Authority": "https://localhost:5000",
      "ClientId": "Base.Samples",
      "ClientSecret": "secret"
    }
  },

  "OpenTeletmetry": {
    "ApplicationName": "Base.Samples",
    "ServiceId": "Base.Samples",
    "ServiceName": "Base.Samples",
    "ServiceVersion": "1.0.0",
    "AgentHost": "https://localhost:7000",
    "AgentPort": 6831
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Zamin": "Verbose"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\MiniBlog.Log.txt" }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "miniblog-serilog-masoudmple-index-{0:yyyy.MM}",
          "restrictedToMinimumLevel": "Verbose",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv6",
          "batchPostingLimit": 50,
          "period": 2,
          "inlineFields": true,
          "bufferFileSizeLimitBytes": 5242880,
          "bufferLogShippingInterval": 5000,
          "bufferRetainedInvalidPayloadsLimitBytes": 5000,
          "bufferFileCountLimit": 31,
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "queueSizeLimit": "100000"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
